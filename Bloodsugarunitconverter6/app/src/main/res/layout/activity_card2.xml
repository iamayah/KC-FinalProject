<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".card1">

    <TextView
        android:id="@+id/idkl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="510dp"
        android:fontFamily="@font/noto"
        android:text="ادخل قياس السكر بوحدة المليجرام/ديسيلتر "
        android:textAlignment="center"
        android:textColor="#6F84AC"
        android:textSize="33dp" />

    <EditText
        android:id="@+id/entrq2"
        android:layout_width="257dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="389dp"
        android:background="@drawable/edtextbg"
        android:hint="ادخل القياس هنا!"
        android:textAlignment="center"
        android:textSize="25dp"
        android:inputType="number"/>


    <Button
        android:id="@+id/calc2"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/cstmbtn"
        android:gravity="center"
        android:text="إحسب"
        android:textColor="#DAE6F6"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thetotal2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="221dp"
        android:fontFamily="@font/noto"
        android:text="القياس بوحدة المليمول/لتر هو :"
        android:textAlignment="center"
        android:textColor="#6F84AC"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/total2"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="155dp"
        android:fontFamily="@font/noto"
        android:text="___"
        android:textAlignment="center"
        android:textColor="#6F84AC"
        android:textSize="30sp" />


    <Button
        android:id="@+id/reset2"
        android:layout_width="74dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="546dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/cstmbtn"
        android:gravity="center"
        android:text="⟳"
        android:textColor="#DAE6F6"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>