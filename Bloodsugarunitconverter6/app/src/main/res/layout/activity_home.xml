<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@drawable/bbg">

    <ImageView
        android:id="@+id/idk"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="423dp"
        app:srcCompat="@drawable/idk" />

    <TextView
        android:id="@+id/wlcm"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="291dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="586dp"
        android:fontFamily="@font/noto"
        android:shadowColor="#1E1616"
        android:text="مرحباً!"
        android:textColor="#6F84AC"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="498dp"
        android:fontFamily="@font/noto"
        android:text="يمكنك تحويل قياس السكر لديك من هنا"
        android:textAlignment="center"
        android:textColor="#6F84AC"
        android:textSize="28sp" />


    <ImageView
        android:id="@+id/moreinfo"
        android:layout_width="109dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="38dp"
        app:srcCompat="@drawable/moreinfo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="122dp"
        android:columnCount="3"
        android:rowCount="3">

        <androidx.cardview.widget.CardView

            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#BCDAF0"
            app:cardCornerRadius="24dp"
            app:cardElevation="24dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="143dp">


                <TextView
                    android:id="@+id/itamename"
                    android:layout_width="230dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/noto"
                    android:text="للتحويل من مليمول/لتر الى مليجرام /ديسيلتر*"
                    android:textAlignment="center"
                    android:textColor="#6F84AC"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.096"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="139dp"
                    android:layout_height="124dp"
                    android:src="@drawable/ntbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/itemimage"
                    android:layout_width="82dp"
                    android:layout_height="95dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.905"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.49"
                    app:srcCompat="@drawable/diabetes" />

                <TextView
                    android:id="@+id/stob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto"
                    android:gravity="center"
                    android:text="من الارقام الصغيرة الى الارقام الكبيرة"
                    android:textColor="#6F84AC"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.047"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.859" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            >
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:backgroundTint="#BCDAF0"
            app:cardCornerRadius="24dp"
            app:cardElevation="24dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="143dp">


                <TextView
                    android:id="@+id/itamename2"
                    android:layout_width="230dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/noto"
                    android:text="للتحويل من مليجرام/ديسيلتر الى مليمول/لتر*"
                    android:textAlignment="center"
                    android:textColor="#6F84AC"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.096"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="139dp"
                    android:layout_height="124dp"
                    android:src="@drawable/ntbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/itemimage2"
                    android:layout_width="82dp"
                    android:layout_height="95dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.905"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.49"
                    app:srcCompat="@drawable/diabetes" />

                <TextView
                    android:id="@+id/btos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto"
                    android:gravity="center"
                    android:text="من الارقام الكبيرة الى الارقام الصغيرة"
                    android:textColor="#6F84AC"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.047"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.859" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            >
        </androidx.cardview.widget.CardView>


    </GridLayout>

    <ImageView
        android:id="@+id/soscall"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="293dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="43dp"
        app:srcCompat="@drawable/ecall" />

</RelativeLayout>